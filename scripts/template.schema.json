{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "published",
        "requested"
      ]
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "maxLength": 250
    },
    "labels": {
      "type": "array",
      "items": [
        {
          "type": "string"
        }
      ]
    },
    "display": {
      "type": "object",
      "properties": {
        "avatar": {
          "type": "string",
          "format": "uri"
        },
        "color": {
          "type": "string",
          "format": "hexcolor"
        }
      },
      "required": [
        "avatar"
      ]
    },
    "links": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "rel": {
              "type": "string"
            },
            "href": {
              "type": "string",
              "format": "uri"
            },
            "title": {
              "type": "string"
            }
          },
          "required": [
            "rel",
            "href"
          ]
        }
      ]
    },
    "item": {
      "type": "object",
      "properties": {
        "_type": {
          "type": "string"
        },
        "uid": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "maxLength": 250
        },
        "labels": {
          "type": "array",
          "items": [
            {
              "type": "string"
            }
          ]
        },
        "display": {
          "type": "object",
          "properties": {
            "avatar": {
              "type": "string",
              "format": "uri"
            },
            "color": {
              "type": "string",
              "format": "hexcolor"
            }
          },
          "required": [
            "avatar"
          ]
        },
        "request": {
          "type": "object",
          "properties": {}
        },
        "fs": {
          "type": "object",
          "properties": {
            "readme.md": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string"
                }
              },
              "required": [
                "url"
              ]
            },
            "main.tsx": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string"
                }
              },
              "required": [
                "url"
              ]
            }
          },
          "required": [
            "readme.md",
            "main.tsx"
          ]
        },
        "configuration": {
          "type": "object",
          "properties": {
            "entrypoint": {
              "type": "string"
            },
            "envs": {
              "type": "object"
            },
            "permissions": {
              "type": "object",
              "properties": {
                "net": {
                  "type": "boolean"
                }
              },
              "required": [
                "net"
              ]
            }
          },
          "required": [
            "entrypoint",
            "envs",
            "permissions"
          ]
        }
      },
      "required": [
        "_type",
        "uid",
        "fs",
        "configuration"
      ]
    }
  }
}
