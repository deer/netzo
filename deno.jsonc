{
  "exclude": [
    "templates/_wip/"
  ],
  "lock": false,
  "tasks": {
    "test": "deno test -A --parallel --unstable --coverage=./cov",
    "check:types": "deno check **/*.ts && deno check **/*.tsx",
    "ok": "deno fmt --check && deno lint && deno task check:types && deno task test",
    "deploy": "deno run --allow-env --allow-net --allow-read scripts/deploy-templates.ts",
    // use https://lcov-viewer.netlify.app to preview cov.lcov
    "cov": "deno coverage ./cov/ --lcov --exclude='test.ts|testdata' > cov.lcov"
    // run template in development: "deno task --cwd=templates/fresh/src dev"
  },
  "imports": {
    "@/": "./",
    "fresh/": "https://deno.land/x/fresh@1.3.1/",
    "preact": "https://esm.sh/preact@10.16.0",
    "preact/": "https://esm.sh/preact@10.16.0/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.1.0",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.1.5",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.2.3",
    "twind": "https://esm.sh/twind@0.16.17",
    "twind/": "https://esm.sh/twind@0.16.17/",
    "netzo/": "https://deno.land/x/netzo@v0.2.23/"
  }
}
