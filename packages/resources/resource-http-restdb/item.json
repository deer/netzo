{
  "uid": "resource-http-restdb",
  "type": "resource",
  "version": "1.0.0",
  "status": "alpha",
  "name": "RestDB",
  "description": "Resource for the RestDB API",
  "categories": [],
  "labels": [
    "database"
  ],
  "display": {
    "imageUrl": "https://raw.githubusercontent.com/netzo/netzo/main/packages/resources/resource-http-restdb/icon.webp"
  },
  "links": [
    {
      "rel": "author",
      "href": "https://netzo.io",
      "title": "Netzo"
    },
    {
      "rel": "repository",
      "href": "https://github.com/netzo/netzo/tree/main/packages/resources/resource-http-restdb"
    },
    {
      "rel": "readme",
      "href": "https://raw.githubusercontent.com/netzo/netzo/main/packages/resources/resource-http-restdb/src/readme.md"
    }
  ],
  "schema": [
    {
      "component": "v-text-field",
      "name": "databaseURL",
      "label": "Database URL"
    },
    {
      "component": "v-text-field",
      "name": "apiKey",
      "label": "API Key"
    }
  ],
  "item": {
    "_type": "resource",
    "type": "http",
    "base": {
      "baseURL": "https://{{databaseURL}}.restdb.io/rest",
      "headers": {
        "Content-Type": "application/json"
      },
      "authorization": {
        "type": "apiKey",
        "in": "header",
        "name": "x-apikey",
        "value": "{{apiKey}}"
      }
    }
  }
}
